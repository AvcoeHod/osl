--Server--
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    char message[100];
    char response[200];
    int fd_write = open("fifo_s2c", O_WRONLY);
    int fd_read = open("fifo_c2s", O_RDONLY);

    if (fd_write == -1 || fd_read == -1) {
        perror("FIFO open error");
        exit(1);
    }

    printf("Server Started...\n");

    while (1) {
        printf("Enter message for client (type 'exit' to quit): ");
        fgets(message, sizeof(message), stdin);
        message[strcspn(message, "\n")] = 0;

        write(fd_write, message, strlen(message) + 1);
        if (strcmp(message, "exit") == 0)
            break;

        read(fd_read, response, sizeof(response));
        printf("Server received: %s\n\n", response);
    }

    close(fd_write);
    close(fd_read);
    return 0;
}

--Client--
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>
#include <sys/stat.h>

int main() {
    mkfifo("fifo_s2c", 0666);
    mkfifo("fifo_c2s", 0666);

    char message[100];
    char result[200];
    int fd_read = open("fifo_s2c", O_RDONLY);
    int fd_write = open("fifo_c2s", O_WRONLY);

    if (fd_read == -1 || fd_write == -1) {
        perror("FIFO open error");
        exit(1);
    }

    printf("Client Ready...\n");

    while (1) {
        read(fd_read, message, sizeof(message));
        if (strcmp(message, "exit") == 0)
            break;

        printf("Client received: %s\n", message);

        int words = 0, chars = 0;
        for (int i = 0; message[i] != '\0'; i++) {
            if (message[i] == ' ' || message[i] == '\n')
                words++;
            else
                chars++;
        }
        words++;

        sprintf(result, "Words: %d | Characters: %d", words, chars);
        write(fd_write, result, strlen(result) + 1);
    }

    close(fd_read);
    close(fd_write);
    return 0;
}
